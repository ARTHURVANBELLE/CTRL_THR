<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CTRL_THR.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                Source="dbr.png" />

            <Label Style="{StaticResource Headline}" Text="Hello, World!" />

            <Label Style="{StaticResource SubHeadline}" Text="Welcome to DBR special control labApp" />

            <Button
                x:Name="FoBtn"
                Clicked="OnFOClicked"
                HorizontalOptions="Center"
                Text="Simple Process Analyse" />
            <Button
                x:Name="SoBtn"
                Clicked="OnSoClicked"
                HorizontalOptions="Center"
                Text="Bonus Process Analyse" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
